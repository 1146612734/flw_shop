.tag_ul {
  background: #fff;
}
.tal_li {
  flex: auto;
  text-align: center;
  line-height: 100rpx;
  color: #666;
  font-size: 32rpx;
  
}
.tal_li.act {
  background: #f46;
  color: #fff;
}

.order_ul {
  margin-top: 4rpx;
  padding: 10rpx;
}
.order_li {
  padding: 20rpx;
  background: #fff;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}
.order_li_t {
  position: relative;
  min-height: 100rpx;
}
.order_li_t .image_box {
  position: absolute;
  left: 0;
  top: 0;
  width: 100rpx;
  height: 100rpx;
}
.order_li_t .image_box .img {
  width: 100%;
  height: 100%;
}
.order_li_t .text_r {
  padding-left: 120rpx;
  padding-right: 120rpx;
  position: relative;
}
.purchase_price {
  position: absolute;
  right: 0;
  top: 5rpx;
  text-align: right;
}
.price {
  color: #666;
  margin-bottom: 5rpx;
  font-size: 32rpx;
}
.price_unit {
  color: #666;
}
.purchase_num {
  
  color: #999;
  font-size: 30rpx;
}
.good_name {
  font-size: 32rpx;
}
.purchase_detail {
  float: right;
  color: #666;
  font-size: 28rpx;
  line-height: 1.5;
}
.purchase_detail .num {
  font-size: 32rpx;

}
.btn_box {
  float: right;
  clear: both;
  margin-top: 20rpx;
}
.cmn_btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  text-align: center;
  border: 1px solid #ccc;
  display: inline-block;
  margin-right: 10rpx;
}
.cmn_btn:nth-last-child(1){
  margin-right: 0;
}
.purchase_btn {
  
  
  color: #f46;
  border: 1px solid #f46;

  
}